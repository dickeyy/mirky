{
    "hosting": {
      "site": "mirky-api",
      "public": "website-public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
  
      "rewrites": [{
        "source": "**",
        "function": "api"
      }]
    },
    "functions": {
      "source": "./src",
      "runtime": "nodejs16"
    }
  }
  